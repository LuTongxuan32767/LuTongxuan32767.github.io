// 弹出框
(function($) {
	if (!window.E5) {
		E5 = {};
	}
	$.extend(E5, {
		Msg : {}
	});
	E5.Msg.eswal = swal;
	bootbox=E5.Msg;
	swal = function() {
		alert("请使用E5.Msg.**");
	};
	/**
	 * @param
	 */
	E5.Msg.alert = function(msg, callback, title, icon) {
		callback = callback ? callback : function() {
		};
		title = title ? title : "";
		if (icon) {
			E5.Msg.eswal(title, msg, icon).then(callback ? callback : function() {
			});
		} else {
			E5.Msg.eswal({
					title : title ? title : "",
					text : msg,
					allowOutsideClick:false,
					allowEscapeKey:false
			}).then(callback ? callback : function() {
			});
		}
	};
	E5.Msg.prompt = function(msg, callback, title) {
		E5.Msg.eswal({
			title : title ? title : "",
			text : msg,
			type :   "question",
			input:"text",
			showCancelButton : true,
			confirmButtonColor : '#3085d6',
			cancelButtonColor : '#d33',
			confirmButtonText : '确定',
			cancelButtonText:"取消",
			allowOutsideClick:false,
			allowEscapeKey:false
		}).then(callback);
	};
	E5.Msg.confirm = function(msg, callback, title) {
		E5.Msg.eswal({
			title : title ? title : "",
			text : msg,
			showCancelButton : true,
			confirmButtonColor : '#3085d6',
			cancelButtonColor : '#d33',
			confirmButtonText : '确定',
			cancelButtonText:"取消",
			allowOutsideClick:false,
			allowEscapeKey:false
		}).then(callback);
	};
	E5.Msg.dialog=E5.Msg.eswal;
	if (!window.emsg) {
		window.emsg = E5.Msg;
	}
})(jQuery);
